<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="line">
            <stroke
                android:width="3dp"
                android:color="#000000" />
        </shape>
    </item>
    <item
        android:end="1dp"
        android:start="1dp"
        android:top="8dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="#000000"
                android:dashGap="2px"
                android:dashWidth="10px" />
        </shape>
    </item>
</layer-list>